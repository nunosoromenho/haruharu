{
  "name": "haruharu",
  "version": "1.0.0-alpha.38",
  "description": "Design System",
  "repository": "github:nunosoromenho/haruharu",
  "author": "Nuno Sequeira",
  "license": "UNLICENSED",
  "engines": {
    "node": "^12.4.0",
    "npm": "^6.9.0"
  },
  "scripts": {
    "clean": "rimraf _site/",
    "autoprefixer": "postcss -u autoprefixer css-mqpacker -r _site/assets/css/* --no-map",
    "scss": "node-sass --output-style expanded test/_styles/ -o _site/assets/css/ --importer node_modules/node-sass-import",
    "lint": "eslint test/_scripts || true",
    "lint-scss": "stylelint test/_styles/*.scss --syntax scss || true",
    "uglify": "mkdirp _site/assets/js -p && uglifyjs test/_scripts/*.js -m -o _site/assets/js/main.js && uglifyjs test/_scripts/*.js -m -c -o _site/assets/js/main.min.js",
    "imagemin": "imagemin test/_assets/images/* --out-dir=_site/assets/images/",
    "icons": "svgo -f test/_assets/images/icons -o _site/assets/images/icons",
    "serve": "browser-sync start --server --no-ui --serveStatic \"_site\" --files \"_site/assets/css/*.css, _site/assets/js/*.js, _site/*.html\" --index \"_site/index.html\"",
    "build:css": "run-s lint-scss scss autoprefixer",
    "build:js": "run-s lint uglify",
    "build:images": "run-s imagemin",
    "build:html": "mkdirp _site && node nunjucks.config.js",
    "build": "run-s build:*",
    "watch:css": "onchange \"test/_styles\" -- run-s build:css",
    "watch:js": "onchange \"test/_scripts\" -- run-s build:js",
    "watch:data": "onchange \"test/_assets/data\" -- run-s build:html",
    "watch:images": "onchange \"test/_assets/images\" -- run-s build:images",
    "watch:html": "onchange \"test/_patterns\" -- run-s build:html",
    "watch": "run-p build:* serve watch:*",
    "w": "run-p build:* serve watch:*",
    "dist:postcss": "postcss -r dist/* -u autoprefixer css-mqpacker  --no-map",
    "dist:scss": "node-sass --output-style compressed styles/main.scss dist/main.min.css --importer node_modules/node-sass-import && node-sass --output-style expanded styles/main.scss dist/main.css --importer node_modules/node-sass-import",
    "dist:lint": "stylelint styles/main.scss --syntax scss || true",
    "dist:build": "run-s dist:lint dist:scss dist:postcss",
    "dist": "rimraf dist/ && npm run dist:build"
  },
  "devDependencies": {
    "acorn": "^6.2.0",
    "autoprefixer": "^9.6.1",
    "browser-sync": "^2.26.7",
    "css-mqpacker": "^7.0.0",
    "eslint": "^6.0.1",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "imagemin-cli": "^5.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.12.0",
    "node-sass-import": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.0",
    "onchange": "^6.0.0",
    "postcss-cli": "^6.1.3",
    "pretty": "^2.0.0",
    "rimraf": "^2.6.3",
    "stylelint": "^10.1.0",
    "svgo": "^1.2.2",
    "tar": "^4.4.10",
    "tiny-slider": "^2.9.2",
    "uglify-js": "^3.6.0"
  }
}
