{% macro progress_block (value = '', max = '') %}
  <div class="m-progress-block">
    <progress max="{{ max }}" value="{{ value }}">
      <div class="a-progress-fallback">
        <span style="width: {{ 100 / max * value }}%;">Progresso: {{ 100 / max * value }}%</span>
      </div>
    </progress>
    <label><span>{{ value }}</span>/{{ max }} Respondidas</label>
  </div>
{% endmacro %}
